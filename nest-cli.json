{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true
  },
  "watchOptions": {
    "paths": [
      "src"
    ],
    "ignored": [
      "**/node_modules/**",
      "**/dist/**",
      "**/prisma/**",
      "**/generated/**",
      "**/Logs/**"
    ]
  }
}
